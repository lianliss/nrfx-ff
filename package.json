{
  "name": "@narfex/fiat-factory",
  "description": "Factory for creating fiat tokens for internal use in the Narfex exchange",
  "repository": {
    "type": "git",
    "url": "https://github.com/narfex/fiat-factory"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.0",
    "chai": "^4.2.0",
    "ethereum-waffle": "^3.0.0",
    "ethers": "^5.0.0",
    "hardhat": "^2.9.6"
  },
  "dependencies": {
    "@nomiclabs/hardhat-etherscan": "^3.0.3",
    "@openzeppelin/contracts": "^4.8.0",
    "dotenv": "^16.0.1"
  },
  "scripts": {
    "compile": "npx hardhat compile",
    "deployBSC": "npx hardhat run scripts/deploy.js --network bsc",
    "deployETH": "npx hardhat run scripts/deploy.js --network eth",
    "deployTest": "npx hardhat run scripts/deploy.js --network test",
    "deployRouter": "npx hardhat run scripts/deployRouter.js --network bsc",
    "deployRouterETH": "npx hardhat run scripts/deployRouterETH.js --network eth",
    "deployPool": "npx hardhat run scripts/deployPool.js --network bsc",
    "deployPoolETH": "npx hardhat run scripts/deployPoolETH.js --network eth",
    "deployBalances": "npx hardhat run scripts/deployBalances.js --network bsc"
  }
}
